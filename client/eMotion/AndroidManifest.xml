<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.godino.emotion"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Emotionlight" 
        android:name="com.godino.emotion.ApplicationController">
        <activity
            android:name="com.godino.emotion.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.godino.emotion.newstatus.SelectStatus"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.godino.emotion.newstatus.SelectColor"
            android:label="@string/app_name"
            android:theme="@style/Theme.Emotionlight" >
        </activity>
        <activity android:name="LoginActivity" android:theme="@style/Theme.Sherlock.NoActionBar"></activity>
    </application>

</manifest>